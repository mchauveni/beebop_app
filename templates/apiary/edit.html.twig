{% extends 'base.html.twig' %}

{% block title %}Beebop - Modifier votre rucher
{% endblock %}

{% block body %}
	<h1>Modifier votre rucher</h1>

	{{ form_start(form) }}

	<div class="form__wrapper">
		{{ form_label( form.name ) }}
		{{ form_errors( form.name ) }}
		{{ form_widget( form.name,  { 'attr' : { 'min': 3, 'max': 100 } } ) }}
	</div>

	<div class="form__wrapper">
		{{ form_label( form.localisation ) }}
		{{ form_errors( form.localisation ) }}
		{{ form_widget( form.localisation,  { 'attr' : { 'min': 3, 'max': 255 } } ) }}
	</div>

	<div class="form__wrapper">
		{{ form_label( form.zipCode ) }}
		{{ form_errors( form.zipCode ) }}
		{{ form_widget( form.zipCode ) }}
	</div>

	{{ form_widget(form) }}
	<div class="form__login">
		<a href="{{ path('app_apiary_index') }}" class="form__link">Retour Ã  vos ruchers</a>
		<button type="submit" class="form__btn" formnovalidate>Valider</button>
	</div>
	{{ form_end(form) }}

{% endblock %}
