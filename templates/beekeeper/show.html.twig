{% extends 'base.html.twig' %}

{% block title %}Beebop - Votre compte
{% endblock %}

{% block body %}
	<header class="header">
		<h1 class="header__name">Beebop</h1>
	</header>

	<main>
		<div class="f-between">
			<h2 class="subtitle" data-validate="{{beekeeper.verified}}">Votre compte</h2>
			<a href="{{ path('app_beekeeper_edit', {'id': beekeeper.id}) }}" class='cta'>Modifier</a>
		</div>
		<table class="table">
			<tbody class="account__container f-column glass">
				<tr class="account__wrapper user">
					<td>{{ beekeeper.lastName }}</td>
					<td>{{ beekeeper.firstName }}</td>
				</tr>
				<tr class="account__wrapper passwd">
					<td style="-webkit-text-security: disc !important">YourPassWord</td>
					{# {{ beekeeper.password }} #}
				</tr>
				<tr class="account__wrapper mail">
					<td>{{ beekeeper.mail }}</td>
				</tr>
			</tbody>
		</table>
		<a href="{{ path('app_beekeeper_index') }}" class='back'>Retour</a>
		<div class='f-between'>
			<a href="{{ path('app_logout') }}">Se d√©connecter</a>
			{{ include('beekeeper/_delete_form.html.twig') }}
		</div>
	</main>
{% endblock %}
