{% extends 'base.html.twig' %}

{% block title %}Beebop - Nouvelle production
{% endblock %}

{% block body %}
	<header class="header">
		<h1 class="header__name">Beebop</h1>
	</header>
	<main>
		<h2 class="subtitle">Enregistrer une nouvelle production</h2>

		{{ form_start(form) }}

		<div class="form__wrapper f-column">
			{{ form_label( form.type ) }}
			{{ form_errors( form.type ) }}
			{{ form_widget( form.type ) }}
		</div>

		<div class="form__wrapper f-column">
			{{ form_label( form.quantity ) }}
			{{ form_errors( form.quantity ) }}
			{{ form_widget( form.quantity ) }}
		</div>


		{{ form_widget(form) }}
		<div class="form__login">

			<a href="{{ path('app_product_index', {'id' : idBeehive}) }}" class="form__link">Retour aux productions</a>
			<button type="submit" class="cta">Valider</button>
		</div>
		{{ form_end(form) }}
	</main>
	<footer>
		<nav>
			<a href="{{ path('app_apiary_index') }}">
				<div class="nav_item nav__beehive"></div>
			</a>
			<a href="{{ path('app_product_index', {'id': idBeekeeper}) }}">
				<div class="nav_item nav__prod"></div>
			</a>
			<a href="{{ path('app_beekeeper_show', {'id': idBeekeeper} ) }}">
				<div class="nav_item nav__account"></div>
			</a>
		</nav>
	</footer>
{% endblock %}
