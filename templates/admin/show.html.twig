{% extends 'base.html.twig' %}

{% block title %}Admin - Beekeeper {{beekeeper.login}}
{% endblock %}

{% block body %}
<section class="adminBeekeeper">
		<h1 class="adminBeekeeper_title">{{beekeeper.id}} - {{beekeeper.login}}</h1>
	<div class="container p-4">
		<a href="{{ path('admin_dashboard') }}" class="btn btn-warning text-white fw-bold mb-3">Retour</a>
		<ul clas="adminBeekeeper_beekeeper">
			<li>{{beekeeper.lastName}} {{beekeeper.firstName}}</li>
			<li>{{beekeeper.mail}}</li>
			<li>{{beekeeper.apiaries | length}} ruchers</li>
			{% set sum = 0 %}    
			{% for apiary in apiaries %}
				{% set sum = sum + apiary.beehives| length %}
			{% endfor %}
			<li> {{sum}} ruches </li>
			{# just for dev bcs it's easier to see, to remove in prod #}
			<li>{{beekeeper.verified ? 'valid√©' : 'en attente de validation' }}</li>
		</ul>
		<a href="{{ path('admin_beekeeper_delete', {'id': beekeeper.id }) }}" class="btn btn-warning text-white fw-bold mb-3">Supprimer l'utilisateur</a>
	</div>
</section>
{% endblock %}