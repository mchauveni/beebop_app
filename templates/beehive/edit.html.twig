{% extends 'base.html.twig' %}

{% block title %}Beebop - Modifier votre ruche
{% endblock %}

{% block body %}
	<main>

		<header class="header">
			<h1 class="header__name">Beebop</h1>
		</header>
		<h2 class="subtitle">Modifier votre ruche</h2>

		{{ form_start(form) }}

		<div class="form__wrapper f-column">
			{{ form_label( form.name) }}
			{{ form_errors( form.name ) }}
			{{ form_widget( form.name,  { 'attr' : { 'min': 3, 'max': 100 } } ) }}
		</div>

		<div class="form__wrapper f-column">
			{{ form_label( form.race ) }}
			{{ form_errors( form.race ) }}
			{{ form_widget( form.race,  { 'attr' : { 'min': 3, 'max': 255 } } ) }}
		</div>

		{{ form_widget(form) }}
		<div class="form__login f-between">
			<a href="{{ path('app_beehive_show', {'id' : beehive.id}) }}" class="form__link">Retour Ã  votre ruche</a>
			<button type="submit" class="cta">Valider</button>
		</div>
		{{ form_end(form) }}


	</main>
{% endblock %}
