{% extends 'base.html.twig' %}

{% block title %}Beebop - Modifier votre ruche
{% endblock %}

{% block body %}
	<main>
		<h1>Modifier votre ruche</h1>

		{{ form_start(form) }}

		<div class="form__wrapper">
			{{ form_label( form.name) }}
			{{ form_errors( form.name ) }}
			{{ form_widget( form.name,  { 'attr' : { 'min': 3, 'max': 100 } } ) }}
		</div>

		<div class="form__wrapper">
			{{ form_label( form.race ) }}
			{{ form_errors( form.race ) }}
			{{ form_widget( form.race,  { 'attr' : { 'min': 3, 'max': 255 } } ) }}
		</div>

		{{ form_widget(form) }}
		<div class="form__login">
			<a href="{{ path('app_beehive_show', {'id' : beehive.id}) }}" class="form__link">Retour Ã  votre ruche</a>
			<button type="submit" class="form__btn">Valider</button>
		</div>
		{{ form_end(form) }}


	</main>
{% endblock %}
